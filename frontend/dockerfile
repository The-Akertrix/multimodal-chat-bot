# Use Node for the build stage
FROM node:20-alpine AS build
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy source and build the production dist
COPY . .
RUN npm run build

# Use a lightweight server to serve the build
FROM node:20-alpine
WORKDIR /app
RUN npm install -g serve
COPY --from=build /app/dist ./dist

# Vite default port is 5173
EXPOSE 5173
CMD ["serve", "-s", "dist", "-l", "5173"]